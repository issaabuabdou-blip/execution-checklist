<h1>14 Day Execution</h1>

<table>
<thead>
<tr>
<th>Day</th>
<th>7AM</th>
<th>Deep Work</th>
</tr>
</thead>
<tbody id="checklist-body"></tbody>
</table>

<button onclick="resetChecklist()">Reset</button>

<script>
const body = document.getElementById("checklist-body");
const savedData = JSON.parse(localStorage.getItem("checklistData")) || {};

// Generate rows
for (let i = 1; i <= 14; i++) {
    const row = document.createElement("tr");
    row.innerHTML = `
        <td>Day ${i}</td>
        <td><input type="checkbox" id="day${i}-7am"></td>
        <td><input type="checkbox" id="day${i}-deep"></td>
    `;
    body.appendChild(row);
}

// Restore saved state
document.querySelectorAll("input[type='checkbox']").forEach(cb => {
    if (savedData[cb.id]) cb.checked = true;

    cb.addEventListener("change", () => {
        savedData[cb.id] = cb.checked;
        localStorage.setItem("checklistData", JSON.stringify(savedData));
    });
});

function resetChecklist() {
    localStorage.removeItem("checklistData");
    location.reload();
}
</script>

</body>
